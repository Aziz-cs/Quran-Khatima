<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quran_stats_bg" >

    <Button
        android:id="@+id/btn_facebook_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_like" />

    <ImageView
        android:id="@+id/iv_helal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/quran_biggest" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_facebook_like"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_about_small"
                android:text="نشر البرنامج"
                android:textColor="@drawable/text_color"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_about_small"
                android:text="تقييم البرنامج"
                android:textColor="@drawable/text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_contactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_about_small"
                android:text="تواصل معنا"
                android:textColor="@drawable/text_color"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_otherApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_about_small"
                android:text="برامجنا الأخرى"
                android:textColor="@drawable/text_color"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_facebook_like"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/btn_facebook_like"
        android:text="iLighTech"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_helal"
        android:layout_alignParentRight="true"
        android:text="عن البرنامج"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_toRightOf="@+id/iv_helal"
        android:text="v1.3"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_helal"
        android:gravity="right"
        android:text="برنامج خاتمة القرآن يساعد المسلم على متابعة قراءة ورده اليومى فى القرآن الكريم. فمن الممكن اختيار ختمة جديدة فى البرنامج واختيار فى كم يوم يريد المستخدم عمل ختمة للقرآن، ثم بعد ذلك يقوم البرنامج بمتتابعة المستخدم واعلامه يومياً بتفاصيل الختمة، بالإضافة إلى انه يحتوى على أحاديث فضل القرآن."
        android:textColor="#DDDDDD"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:gravity="right"
        android:text="ملحوظة: إذا اردت إلغاء الختمة والمذكر اليومى رجاء ضغط على زر (القائمة) مى الصفحة الرئسية ثم اختيار إلغاء الختمة."
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>